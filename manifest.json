{
  "manifest_version": 3,
  "name": "Plockmatic PDM Search",
  "version": "0.1",
  "description": "A helper extension to enable search in PDM and M3 directly from Creo View",
  "permissions": [
    "tabs",
    "scripting",
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "http://pdmapp.plockmatic.local/*",
    "https://edgars-z.github.io/pdm-tricks/*"
  ],
  "background": {
    "service_worker":  "background.js",
    "scripts": ["background.js"]
  }
}